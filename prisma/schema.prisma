generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id        String   @unique
  name      String   @unique
  tickets   Ticket[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id          String         @unique
  reccurrent  Boolean
  description String
  status      TicketStatus
  priority    TicketPriority
  category    TicketCategory
  clientName  String
  client      Client         @relation(fields: [clientName], references: [name])
  techName    String?
  tech        Tech?          @relation(fields: [techName], references: [name])
  createdAt   DateTime       @default(now())
  progress    DateTime?
  finished    DateTime?
  report      String?
  note        String?
}

model Tech {
  id            String       @unique
  name          String       @unique
  password      String
  phone         String
  admin         Boolean
  create_ticket Boolean
  delete_ticket Boolean
  color         String
  status        TechStatus
  tickets       Ticket[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

enum TicketStatus {
  open
  progress
  finished
}

enum TicketPriority {
  urgent
  high
  medium
  low
}

enum TicketCategory {
  daily
  delivery
  budget
  maintenance
}

enum TechStatus {
  active
  inactive
}
